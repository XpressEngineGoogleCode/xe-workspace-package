<query id="insertDirectory" action="insert">
    <tables>
        <table name="project_directories" />
    </tables>
    <columns>
        <column name="project_dir_srl" var="project_dir_srl" notnull="notnull" />
        <column name="parent_directory_srl" var="parent_directory_srl" default="0" />
        <column name="list_order" var="list_order" notnull="notnull" />
        <column name="title" var="title" notnull="notnull" />
        <column name="description" var="description" />
        <column name="regdate" default="curdate()" />
    </columns>
</query>
